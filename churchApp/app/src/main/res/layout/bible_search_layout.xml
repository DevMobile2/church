<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:local="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/white"
   >


<TextView
    android:layout_margin="@dimen/activity_vertical_margin"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Select Book"/>
    <Spinner
        android:entries="@array/Book"
        android:layout_margin="@dimen/activity_vertical_margin"
        android:id="@+id/spBookName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minWidth="80dp"
        android:spinnerMode="dropdown"
        local:popupTheme="@style/ThemeOverlay.AppCompat.Light"
     ></Spinner>
    <TextView
        android:layout_margin="@dimen/activity_vertical_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Chapter"/>
   <Spinner
       android:entries="@array/chapters"
       android:layout_margin="@dimen/activity_vertical_margin"
       android:id="@+id/spChapter"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"></Spinner>

    <TextView
        android:layout_margin="@dimen/activity_vertical_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Version"/>
    <Spinner
        android:entries="@array/VERSIONS"
        android:layout_margin="@dimen/activity_vertical_margin"
        android:id="@+id/spVersion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></Spinner>
    <Button
        android:id="@+id/btnReadExcel1"
        android:layout_margin="@dimen/activity_vertical_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="search"/>
</LinearLayout>
