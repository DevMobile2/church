<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>


    </style>

    <style name="MyButton" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/colorBlack</item>
        <item name="colorButtonNormal">@color/colorGoogleBtn</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MyButtonFb" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/colorBlack</item>
        <item name="colorButtonNormal">@color/colorBlue</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="myCustomMenuTextApearance" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="android:textColor">@android:color/primary_text_dark</item>
    </style>
    <color name="white">#ffffff</color>

    <style name="textview_header" parent="@style/textview_name">
        <!--<item name="android:textSize">@dimen/text_header</item>-->
    </style>

    <style name="textview_name" parent="@style/textview_parent">
        <!--<item name="android:textSize">@dimen/text_name</item>-->
        <item name="android:textStyle">bold</item>
    </style>

    <style name="textview_parent">
        <item name="android:textColor">@color/textcolor_light_grey</item>
        <item name="android:typeface">sans</item>
    </style>

</resources>
